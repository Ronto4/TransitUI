<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TransitWebViewer</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleVipNavigationMenu">
                <span class="oi oi-list-rich" aria-hidden="true"></span> ViP Potsdam
            </NavLink>
            @if (!VipNavigationCollapsed)
            {
                <NavLink class="expand-menu" href="vip">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> <span>Allgemeines</span>
                </NavLink>
                <NavLink class="" href="vip/dotmatrix">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> <span>Anzeigen</span>
                </NavLink>
                <NavLink class="" href="vip/history">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> <span>Liniengeschichte</span>
                </NavLink>
            }
        </div>
    </nav>
</div>

@code {
    private bool VipNavigationCollapsed { get; set; } = true;
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

    private void ToggleVipNavigationMenu()
    {
        VipNavigationCollapsed = !VipNavigationCollapsed;
    }

}
