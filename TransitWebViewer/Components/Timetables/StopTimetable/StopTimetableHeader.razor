@using Timetable.Views

<tr>
    <td class="text-center align-content-center col-1" colspan="1">
        <span class="fw-bold">@string.Join(", ", StopTimetableView.Lines.Select(line => line.Name))</span>
    </td>
    <td class="text-center align-content-center col-3" colspan="3">
        <span class="fw-bold">&gt; @StopTimetableView.TargetStops.First().DisplayName(StopTimetableView.DayOfTimetable, StopTimetableView.StartStop.City)</span>
        @for (var i = 1; i < StopTimetableView.TargetStops.Count; ++i)
        {
            <span class="fst-italic"> oder</span>
            <span class="fw-bold">&gt; @StopTimetableView.TargetStops.ElementAt(i).DisplayName(StopTimetableView.DayOfTimetable, StopTimetableView.StartStop.City)</span>
        }
    </td>
    <td class="text-center align-content-center col-6" colspan="6">
        <span class="fw-bold">@StopTimetableView.StartStop.DisplayName(StopTimetableView.DayOfTimetable, StopTimetableView.StartStop.City)</span>
    </td>
</tr>

@code {
    [Parameter, EditorRequired] public required StopTimetableView StopTimetableView { get; init; }
}
