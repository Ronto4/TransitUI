@page "/vip/timetables/stop"
@using Timetable
@using TransitWebViewer.Components.Timetables.StopTimetable
@using TransitWebViewer.Components.Timetables.Selectors
@using VipTimetable

<h3>ViP - Haltestellenfahrpläne</h3>

@code
{
    [Parameter, SupplyParameterFromQuery(Name = "date")]
    public DateOnly? QueryDate { get; init; }

    [Parameter, SupplyParameterFromQuery(Name = "line")]
    public string[] QueryLineIdentifier { get; init; } = [];

    [Parameter, SupplyParameterFromQuery(Name = "route")]
    public string[] QueryRouteIndices { get; init; } = [];

    [Parameter, SupplyParameterFromQuery(Name = "days-partition")]
    public int? QueryDayPartitionInitialIndex { get; init; }

    [Parameter, SupplyParameterFromQuery(Name = "stop-index")]
    public int? QueryStopInitialIndex { get; init; }

    private static IHistoryEntry? HistoryEntry { get; set; } = null;

    private static IReadOnlyCollection<Line.Trip> Trips { get; set; } = [];

    private static IReadOnlyDictionary<string, Line> GetAllLinesMapping() => HistoryEntry?.OrderedLinesById.ToDictionary() ?? new Dictionary<string, Line>();

    private static Stop? StartStopForStopView { get; set; } = null;

    private static IReadOnlyCollection<DaysOfOperation> DaysPartition { get; set; } = DaysPartitionSelector.Default;
}

<div class="button-group">
    <HistoryEntrySelector InitialDate="QueryDate ?? DateOnly.FromDateTime(DateTime.Now)" OnUpdate="historyEntry => { HistoryEntry = historyEntry; Trips = []; StateHasChanged(); }"/>
    <StopSelector InitialStopIndex="QueryStopInitialIndex" SourceTrips="Trips" SelectionMode="StopSelector.Mode.IntersectRouteStops"
                  OnUpdate="stop => { StartStopForStopView = stop; StateHasChanged(); }" ReferenceDate="HistoryEntry?.EffectiveDate ?? new DateOnly()"/>
    <DaysPartitionSelector InitialIndex="QueryDayPartitionInitialIndex" OnUpdate="daysPartition => { DaysPartition = daysPartition; StateHasChanged(); }"/>
</div>

@if (HistoryEntry is not null)
{
    <div class="button-group pt-1">
        <TripSelector InitialLineIdentifier="@QueryLineIdentifier" InitialRoutes="QueryRouteIndices" HistoryEntry="HistoryEntry" OnUpdate="trips => { Trips = trips; StateHasChanged(); }" ReferenceCity="Cities.Potsdam"/>
    </div>
}

<hr/>

@if (StartStopForStopView is { } startStop)
{
    <StopTimetable TimetableOriginStop="startStop" SourceTripsForTimetable="Trips" AllLines="GetAllLinesMapping()"
                   DaysPartition="DaysPartition" DayOfTimetable="HistoryEntry?.EffectiveDate ?? new DateOnly()"/>
}
else
{
    <strong>Es wurde noch keine Starthaltestelle ausgewählt.</strong>
}
